{{ form_start(form) }}
{{form_row(form.q)}}
<div id="homeMenu-section-region" class="homeMenu-section">
    <button class="homeMenu-button full-w text-left" type="button">
        <p class="ml-2">Region</p>
        <img class="arrow" src="{{asset('build/images/arrow.png')}}" alt="">
    </button>
    <div id="region-collapse" class="my-collapse d-column">
        <div class="my-collapse-scroll">
            {% for child in form.regionCategories|filter(child => not child.rendered) %}
            <div class="homeMenu-filterselector full-w">
                {{ form_widget(child, {'attr': {'class':'mr-2'}}) }}
                {{ form_label(child, null, {'label_attr': {'class':'m-0'}}) }}
                {{ form_help(child) }}
                {{ form_errors(child) }}
            </div>
            {% endfor %}
        </div>
    </div>
</div>
<div id="homeMenu-section-grape" class="homeMenu-section">
    <button class="homeMenu-button full-w text-left" type="button">
        <p class="ml-2">Cépage</p>
        <img class="arrow" src="{{asset('build/images/arrow.png')}}" alt="">
    </button>
    <div id="grape-collapse" class="my-collapse d-column">
        <div class="my-collapse-scroll">
            {% for child in form.grapeCategories|filter(child => not child.rendered) %}
            <div class="homeMenu-filterselector full-w">
                {{ form_widget(child, {'attr': {'class':'mr-2'}}) }}
                {{ form_label(child, null, {'label_attr': {'class':'m-0'}}) }}
                {{ form_help(child) }}
                {{ form_errors(child) }}
            </div>
            {% endfor %}
        </div>
    </div>
</div>
<div id="homeMenu-section-type" class="homeMenu-section">
    <button class="homeMenu-button full-w text-left ml-2" type="button">
        Type
        <img class="arrow" src="{{asset('build/images/arrow.png')}}" alt="">
    </button>
    <div id="grape-collapse" class="my-collapse d-column">
        {# {{ form_widget(form.regionCategories, {'attr': {'class': 'homeMenu-filterselector d-flex full-w'}})}} #}
        {% for child in form.typeCategories|filter(child => not child.rendered) %}
        <div class="homeMenu-filterselector full-w">
            {{ form_widget(child, {'attr': {'class':'mr-2'}}) }}
            {{ form_label(child, null, {'label_attr': {'class':'m-0'}}) }}
            {{ form_help(child) }}
            {{ form_errors(child) }}
        </div>
        {% endfor %}
    </div>
</div>
<button type="submit" class="btn btn-primary">Soumettre</button>
{{ form_end(form) }}
