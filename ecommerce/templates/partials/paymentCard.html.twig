<form id="payment-form" method="POST">
	<div class="errors">
		<!-- Will contain errors-->
	</div>

	<input type="text" id="cardholder-name" placeholder="Titulaire de la carte">

	<div id="card-element">
		<!-- Will contain HTML of the card element generated by JS-->
	</div>

	<div id="card-errors" role="alert">
		<!-- We'll put the error messages in this element -->
	</div>

	<button id="card-button" type="button" data-secret="{{ intent }}">Valider le paiement</button>
</form>